  "disk_profiles": {
    "triage": {
      "description": "Quick disk triage",
      "paths": [
        "/Windows/System32/config/SAM",
        "/Windows/System32/config/SYSTEM",
        "/Windows/System32/config/SOFTWARE",
        "/Users/*/NTUSER.DAT",
        "/var/log/auth.log",
        "/etc/passwd",
        "/etc/shadow"
      ]
    },
    "windows_forensics": {
      "description": "Windows disk forensics",
      "paths": [
        "/Windows/System32/config/*",
        "/Users/*/NTUSER.DAT",
        "/Users/*/AppData/Roaming/Microsoft/Windows/Recent/*",
        "/Windows/Prefetch/*.pf",
        "/Windows/System32/winevt/Logs/*.evtx",
        "/$MFT",
        "/$LogFile",
        "/$UsnJrnl"
      ]
    },
    "linux_forensics": {
      "description": "Linux disk forensics",
      "paths": [
        "/var/log/auth.log",
        "/var/log/syslog",
        "/var/log/secure",
        "/home/*/.bash_history",
        "/root/.bash_history",
        "/etc/passwd",
        "/etc/shadow",
        "/etc/sudoers",
        "/var/spool/cron/**",
        "/etc/crontab",
        "/etc/cron.*/**"
      ]
    },
    "malware_hunt": {
      "description": "Hunt for malware on disk",
      "paths": [
        "/Windows/System32/drivers/*.sys",
        "/Windows/Temp/*",
        "/Users/*/AppData/Local/Temp/*",
        "/Users/*/AppData/Roaming/*.exe",
        "/tmp/*",
        "/dev/shm/*",
        "/var/tmp/*"
      ]
    },
    "persistence_hunt": {
      "description": "Find persistence mechanisms",
      "paths": [
        "/Windows/System32/Tasks/**",
        "/etc/cron.d/**",
        "/etc/systemd/system/**",
        "/etc/init.d/**",
        "**/Startup/**",
        "**/RunOnce/**",
        "**/Run/**",
        "/Library/LaunchDaemons/**",
        "/Library/LaunchAgents/**"
      ]
    },
    "credentials": {
      "description": "Extract credential files",
      "paths": [
        "/Windows/System32/config/SAM",
        "/Windows/System32/config/SYSTEM",
        "/Windows/System32/config/SECURITY",
        "/etc/shadow",
        "/etc/security/opasswd",
        "/Users/*/.ssh/id_rsa",
        "/home/*/.ssh/id_rsa",
        "/root/.ssh/id_rsa"
      ]
    },
    "browser_artifacts": {
      "description": "Browser history and data",
      "paths": [
        "**/History",
        "**/Places.sqlite",
        "**/Cookies",
        "**/Web Data",
        "**/Login Data",
        "**/Cache/**"
      ]
    },
    "user_activity": {
      "description": "User activity and recent files",
      "paths": [
        "/Users/*/AppData/Local/Microsoft/Windows/Explorer/*.db",
        "/Users/*/AppData/Roaming/Microsoft/Windows/Recent/*.lnk",
        "/Users/*/AppData/Local/ConnectedDevicesPlatform/**",
        "**/JumpLists/**",
        "**/ShellBags/**",
        "/home/*/.local/share/recently-used.xbel"
      ]
    },
    "email_forensics": {
      "description": "Email and communication data",
      "paths": [
        "**/*.pst",
        "**/*.ost",
        "**/*.msg",
        "**/*.eml",
        "**/*.mbox"
      ]
    },
    "document_recovery": {
      "description": "Recover documents and files",
      "paths": [
        "**/*.pdf",
        "**/*.docx",
        "**/*.xlsx",
        "**/*.pptx",
        "**/*.txt",
        "**/*.odt",
        "**/ShadowCopy*"
      ]
    },
    "anti_forensics": {
      "description": "Detect anti-forensic activity",
      "paths": [
        "**/$MFT",
        "**/$LogFile",
        "**/$UsnJrnl",
        "**/Prefetch/*.pf",
        "**/recent/*.lnk",
        "/var/log/wtmp",
        "/var/log/btmp"
      ]
    },
    "ctf_common": {
      "description": "Common CTF artifact locations",
      "paths": [
        "**/Desktop/*",
        "**/Downloads/*",
        "**/Documents/*",
        "/home/*/flag*",
        "/root/flag*",
        "/tmp/flag*",
        "**/*flag*",
        "**/*.zip",
        "**/*.rar",
        "**/*.7z"
      ]
    }
  },
  "automated_workflows": {
    "ctf_memory_windows": {
      "description": "Automated CTF workflow for Windows memory",
      "steps": [
        {
          "profile": "triage",
          "output": "triage_report.html"
        },
        {
          "profile": "ctf_windows",
          "output": "ctf_analysis.html"
        },
        {
          "search": "flag",
          "output": "flag_search.txt"
        }
